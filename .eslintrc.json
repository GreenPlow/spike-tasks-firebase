{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["react", "react-hooks", "jest", "testing-library", "jest-dom"],
  "extends": [
    "eslint:recommended",
    "react-app",
    "react-app/jest",
    "plugin:react/recommended",
    "plugin:testing-library/recommended",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended",
    "airbnb"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src/", "node_modules"]
      }
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react-hooks/rules-of-hooks": "warn", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    //     "plugin:jest/recommended" this causes an error that a specific version of jest is not outlined
  }
}
